#sidebarL
  @media mq-normal
    column(sidebarL-column)
    min-height: 1px
  @media mq-mobile
    display: none

#sidebar
  @media mq-normal
    column(sidebar-column)
  @media mq-mobile
    display: none


.widget-wrap
  margin: 0
  max-width: 180px

.widget-title
  @extend $block-caption
  letter-spacing: 0px
  color: #222

.widget
  color: color-sidebar-text
  background: transparent
  padding: 15px 0 0
  border-top: 1px solid #333
  a
    color: #555
    text-decoration: none
    &:hover
      color: color-link-hover
      text-decoration: none
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc
  .category-list-item, .tag-list-item, .archive-list-item
    font-size: 1.2em
    font-weight: bold
  .category-list-child
    margin: 0;
    padding: 10px 0 10px 10px;
    list-style-type: none;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    .category-list-item
      font-size: 1em;
      &:before
        font-family: "FontAwesome";
        content: "\f0da";
        margin-right: 0.5em;


.widget_athemes_tabs .widget
  border-width: 0
  ul
    background: transparent;
    border-bottom: 1px solid #333;
    li
      margin: 0 0 15px;
      a
        margin: 0;
        font-size: 1em;
        text-transform: uppercase;
        line-height: 1.2;
        color: #222;
        font-family: font-oswald
        &:hover
          color: color-theme

.widget-social-icons 
  li
    float: left
    margin: 5px 10px 5px 0
    text-align: center