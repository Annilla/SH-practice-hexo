// Home category
.home-section
    padding: 50px 0
    .home-section-title
        width: 60%
        margin-bottom: 30px
        padding-bottom: 2px
        font-family: $fontFamily
        font-size: 30px
        font-weight: 500
        text-transform: uppercase
        letter-spacing: 1.2px
        border-bottom: 1px solid black
        &:after
            content: ''
            display: block
            width: 100%
            height 3px
            background-color: black
    ul.category-list
        overflow: hidden
        font-family: $fontFamily
        letter-spacing: 1.2px
        li.category-list-item
            float: left
            width: 200px
            height: 200px
            margin: 0 20px 20px 0
            position: relative
            transition: .5s
            &:after
                display: block
                position: absolute
                bottom: 20px
                right: 20px
                color: white
                font-size: 16px
                font-family: "FontAwesome"
                content: "\f02e"
            &:hover
                transform: scale(0.9)
                opacity: 0.8
            .category-list-link
                display: block
                width: 100%
                height: 100%
                border-radius: 5px
                color: white
                font-size: 25px
                padding: 15px 0 0 30px
                line-height: 1.2em
            &:nth-child(3n+1) .category-list-link
                background-color: $color-3
            &:nth-child(3n+2) .category-list-link
                background-color: darken($color-3, 20%)
            &:nth-child(3n+3) .category-list-link
                background-color: darken($color-3, 40%)
            .category-list-count
                color: white
                font-size: 16px
                text-transform: uppercase
                position: absolute
                bottom: 20px
                right: 40px
                &:before
                    content: ""
                &:after
                    content: "Articles"
                    margin-left: 10px
            .category-list-child
                display: none;
    
ul.home-section-posts
    li
        overflow: hidden
        border-bottom: 1px solid #ccc
        padding-top: 40px
        a.home-section-posts-img
            float: left
            display: block
            width: 150px
            height: 150px
            overflow: hidden
            border-radius: 5px
            background-position: center
            background-repeat: no-repeat
            background-size: cover
            background-color: #eee
            transition: .5s
            &:hover
                transform: scale(0.8)
        .home-section-posts-content
            float: right
            width: calc(100% - 150px - 30px)
            padding-bottom: 40px
            .home-section-posts-meta
                font-family: $fontFamily
                text-transform: uppercase
                font-size: 18px
                letter-spacing: 1px
                font-weight: normal
                color: #9b9b9b
                .ico-folder
                    &:before
                        content: '/'
                .article-category-link
                    color: #9b9b9b
                    &:hover
                        color: #bc0202
            a.home-section-posts-content-title
                color: black
                font-size: 30px
                line-height: 1.5em
                font-weight: bold
                &:hover
                    color: $color-3
            .home-section-posts-content-desc
                padding-top: 20px
                color: #9b9b9b
                font-size: 16px
                height: 6.5em
                overflow: hidden
            .home-section-posts-content-bottom
                padding-top: 30px
                .home-section-posts-content-tag
                    float: left
                    width: 50%
                    .ico-tags
                        margin-right: 10px
                        font-size: 20px
                        &:before
                            color: #9b9b9b
                    .article-tag-list
                        line-height: normal
                        .article-tag-list-item
                            padding: 0
                            .article-tag-list-link
                                color: #9b9b9b
                .home-section-posts-content-btn
                    font-size: 18px
                    font-family: $fontFamily
                    letter-spacing: 1px
                    padding: 5px 20px
                    float: right
                    color: white
                    background-color: black
                    border-radius: 5px
                    &:hover
                        background-color: $color-3

@media only screen and (max-width: 60em)
    .nav-open
        display inline-block

    #main-navigation
        &:target
            >.nav-open
