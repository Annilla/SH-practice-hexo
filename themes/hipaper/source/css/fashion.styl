            >.nav-close
                display inline-block

            >.sf-menu
                >ul
                    max-height 900px
                    max-width 100%
                    z-index 901

        >.sf-menu
            position relative
            text-align center

            >ul
                position absolute
                top 0
                left calc(50% - 224px / 2)
                width 100%
                max-height 0
                max-width 16em
                overflow hidden
                background $color-1
                z-index 1

                >li
                    float none
                    display block
                    border-bottom 1px dotted $color-8

                    &:after
                        display none

            ul
                li
                    &:only-child
                        border-top 1px dotted $color-8

                    &:last-child
                        border-bottom none

        li
            a
                float none
                display block
                color $color-2

    .main-navigation-open
